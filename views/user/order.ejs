<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Page</title>
    <%- include('../partials/head-user'); -%>
    <!-- <link rel="stylesheet" href="/public/assets/css/bootstrap.css"> -->
    <link rel="stylesheet" href="/public/assets/css/order.css">
</head>

<body>
    <!-- Header -->
    <%- include('../partials/user-navbar'); %>
    <!-- \ End of header -->

    <!-- Content -->
    <section class="body" id="">
        <div class="container">
            <!-- checkout header-->
            <div class="checkout-header">
                <ul class="checkout-header-nav">
                    <li class="checkout-header-item">
                        <span>Giỏ hàng</span>
                        <input type="checkbox" checked class="checkbox-round" />
                    </li>
                    <li class="checkout-header-item">
                        <span>Địa chỉ & Giao hàng</span>
                        <input type="checkbox" checked class="checkbox-round" />
                    </li>
                    <li class="checkout-header-item">
                        <span>Thanh Toán</span>
                        <input type="checkbox" class="checkbox-round" />
                    </li>
                </ul>
            </div> <!-- \ end checkout header-->

            <!-- Check out content-->
            <div class="checkout">
                <!-- Check out left -->
                <div class="checkout-left">
                    
                    <!-- Address list -->
                    <h3>Địa chỉ giao hàng</h3>
                    <p>Vui lòng chọn một địa chỉ giao hàng:</p>
                    <a style="text-decoration: none;" href="#showCreatingAddressContent">
                        <button type="button" class="btn btn-primary addressBtn">Thêm địa chỉ mới</button>
                    </a>
                    <!-- List address -->
                    <div class="address-info__list">
                        <div class="address-info__list-item">
                            <div class="address-info__list-item--info">
                                <p class="sub-name">
                                    Vũ Long
                                </p>
                                <p class="sub-address">
                                    Địa chỉ : Thôn Giáo - tiên du - Bắc Ninh
                                </p>
                                <p class="sub-phone">
                                    Điện thoại : 0389926795
                                </p>
                            </div>
                            <div class="address-info__list-item--action">
                                <button class="delete-button btn-danger">Xoá</button>
                                <button class="edit-button btn-primary">Sửa</button>
                            </div>
                        </div>
                        

                    </div>
                    <div class="checkout-notification"></div>
                    <div class="checkout-left-delivery-option">
                        <button class="float-right checkout-right-delivery-button">Chọn hình thức giao hàng</button>
                    </div>

                </div>
                <!-- \ end check out left-->
                <!-- Check out right-->
                <div class="checkout-right">
                    <!-- Cart item list-->
                    <div class="cart-item-list">
                        <!-- <div class="cart-item-list-product">
                            <div class="cart-item-list-image">
                                <img src="https://contents.mediadecathlon.com/p1030211/536aa7aaab21e2a33dd054d4189c24db/p1030211.jpg?f=150x150" alt="">
                            </div>
                            <div class="cart-item-list-infomation">
                                <div class="cart-item-list-name">
                                    <h4>Thanh chống đẩy đa năng</h4>
                                </div>
                                <div class="cart-item-list-price">
                                    <span>Số lượng: </span><span>Giá: </span>
                                </div>
                            </div>
                        </div> -->
                    </div>
                    <div class="cart-details">
                        <div class="total-price">
                            Tạm tính<span style="font-weight: bold;" class="float-right total-price-calc"></span>
                        </div>
                        <div class="shipping-cash">
                            Phí vận chuyển <span style="font-weight: bold;"
                                class="float-right shipping-cash-calc"></span>
                        </div>
                        <div class="total-all-prices">
                            Tổng cộng <span style="font-weight: bold;" class="float-right all-price-calc"></span>
                        </div>
                    </div>

                    <!-- \End cart item list-->

                    <!--Cart promise-->
                    <div class="cart-promise">
                        <div class="cart-promise-div1">
                            <img src="data:image/svg+xml;base64,"
                                alt="Returns">
                            <p>30 ngày trả hàng</p>
                        </div>
                        <div class="cart-promise-div2">
                            <img src="data:image/svg+xml;base64,"
                                alt="Returns">
                            <p>Miễn phí Vận chuyển Toàn quốc cho Đơn hàng trên 899k</p>
                        </div>
                        <div class="cart-promise-div3">
                            <img src="data:image/svg+xml;base64,"
                                alt="warranty">
                            <p>Bảo hành 2 năm</p>
                        </div>
                    </div>
                    <!-- \End Cart promise-->
                </div> <!-- \ end check out right-->
            </div> <!-- \ end checkout content-->
        <!-- Show and edit address -->
            <div id="showCreatingAddressContent" class="address-info-details">
               
            </div>
        </div>
    </section>
    <!-- \ End Content -->
</body>
<footer>
    <%- include('../partials/footer'); %>
    <%- include('../partials/user-script'); -%>
</footer>
<script src="/public/assets/js/order.js"></script>
<script src="/public/assets/js/formAddress.js"></script>
</html>